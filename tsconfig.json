{
    "compilerOptions": {
      "baseUrl": "src",
      "jsx": "react-jsx",
      "paths": {
        "@features/*": ["features/*"],
        "@components/*": ["components/*"],
        "@contexts/*": ["contexts/*"],
        "@public/*": ["../public/*"],
        "@services/*": ["services/*"]
      },
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src"]
  }